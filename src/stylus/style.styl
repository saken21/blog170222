@charset "UTF-8";

#ks170222 {
	ul {
		list-style:none;
	}
	.q {
		margin-bottom:20px;
		li {
			display:none;
			font-size:32px;
			line-height:40px;
			&:first-child {
				display:block;
			}
		}
	}
	.a {
		li {
			float:left;
			padding:5px 10px;
			border-radius:3px;
			color:#fff;
			font-size:14px;
			cursor:pointer;
			&.y {
				margin-right:10px;
				background:#1db565;
			}
			&.n {
				background:#8f9baf;
			}
			&:hover {
				opacity:.8;
			}
		}
	}
	.result {
		.hand {
			margin-bottom:20px;
			font-size:32px;
		}
		.comment {
			font-size:16px;
		}
	}
}